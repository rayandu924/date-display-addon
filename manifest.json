{
  "name": "Day of Week Display",
  "version": "5.2.0",
  "description": "Ultra-simple responsive day of week widget with configurable fonts, colors and letter spacing",
  "author": "MyWallpaper",
  "type": "widgets",
  "tags": ["widget", "date", "time", "display", "text"],
  "settings": {
    "fontUrl": {
      "type": "text",
      "label": "Font URL",
      "description": "Google Fonts or custom font URL (leave empty for system font)",
      "default": "https://fonts.cdnfonts.com/css/anurati",
      "placeholder": "https://fonts.googleapis.com/..."
    },
    "fontFamily": {
      "type": "text",
      "label": "Font Family",
      "description": "Name of the font family to use",
      "default": "Anurati, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "textColor": {
      "type": "color",
      "label": "Text Color",
      "description": "Color of the date text",
      "default": "#FFFFFF"
    },
    "language": {
      "type": "select",
      "label": "Language",
      "description": "Language for day names",
      "options": [
        { "value": "en-US", "label": "English" },
        { "value": "fr-FR", "label": "Français" },
        { "value": "es-ES", "label": "Español" },
        { "value": "de-DE", "label": "Deutsch" },
        { "value": "it-IT", "label": "Italiano" },
        { "value": "pt-PT", "label": "Português" },
        { "value": "ru-RU", "label": "Русский" },
        { "value": "ja-JP", "label": "日本語" },
        { "value": "zh-CN", "label": "中文" }
      ],
      "default": "en-US"
    },
    "letterSpacingPercent": {
      "type": "range",
      "label": "Letter Spacing (%)",
      "description": "Espacement entre les lettres en pourcentage de la taille de police",
      "default": 8,
      "min": 0,
      "max": 20,
      "step": 0.5
    }
  }
}
